<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gusman_iakbali.finalproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashscreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashscreenTheme">
             <intent-filter>
             <action android:name="android.intent.action.MAIN" />
             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name=".ListBangundatarActivity"
            android:label="Daftar Bangun Datar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".DetailBangundatarActivity"
            android:label="Detail Bangun Datar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListBangundatarActivity" />
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="Info">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ListBantarHitungActivity"
            android:label="Pilih Bangun Datar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".HitungActivity"
            android:label="Hitung Luas!">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListBantarHitungActivity" />
        </activity>
        <activity
            android:name=".HasilActivity"
            android:label="Hasil Luas">
        </activity>
    </application>

</manifest>